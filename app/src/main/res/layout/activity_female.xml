<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    tools:context=".FemaleActivity">

    <ImageView
        android:id="@+id/ivgold"
        android:layout_width="406dp"
        android:layout_height="146dp"
        android:src="@drawable/gold" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivgold"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/g"
        android:text="Gold"
        android:id="@+id/btngold"
        android:textSize="30dp"/>

    <ImageView
        android:layout_width="407dp"
        android:layout_height="142dp"
        android:layout_below="@id/btngold"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="31dp"
        android:id="@+id/ivsilver"
        android:src="@drawable/silver" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivsilver"
        android:layout_marginTop="10dp"
        android:text="Silver"
        android:textSize="30dp"
        android:id="@+id/btnsilver"
        android:backgroundTint="@color/Silver"/>

    <ImageView
        android:layout_width="407dp"
        android:layout_height="149dp"
        android:layout_below="@id/btnsilver"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:id="@+id/ivplatinum"
        android:src="@drawable/platinum" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:layout_below="@id/ivplatinum"
        android:text="PLatinum"
        android:id="@+id/btnplatinum"
        android:textSize="30dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/pink"/>
</RelativeLayout>