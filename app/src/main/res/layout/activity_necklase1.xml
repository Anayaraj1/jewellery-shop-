<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".Necklase1Activity">

    <ImageView
        android:id="@+id/ivpn1"
        android:layout_width="219dp"
        android:layout_height="167dp"
        android:src="@drawable/pn1" />
    <ImageView
        android:id="@+id/ivpn2"
        android:layout_below="@+id/ivpn1"
        android:layout_width="219dp"
        android:layout_height="167dp"
        android:src="@drawable/pn2"
        android:layout_marginTop="10dp"/>
    <ImageView
        android:id="@+id/ivpn3"
        android:layout_below="@+id/ivpn2"
        android:layout_width="219dp"
        android:layout_height="167dp"
        android:src="@drawable/pn3"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:id="@+id/ivpn4"
        android:layout_width="219dp"
        android:layout_height="167dp"
        android:layout_below="@+id/ivpn3"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="33dp"
        android:layout_marginBottom="6dp"
        android:src="@drawable/pn4" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="69dp"
        android:layout_marginEnd="31dp"
        android:text="Buy now"
        android:backgroundTint="@color/hg"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="237dp"
        android:layout_marginEnd="29dp"
        android:text="Buy now"
        android:backgroundTint="@color/hg"
         />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="278dp"
        android:text="Buy now"
        android:backgroundTint="@color/hg" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="43dp"
        android:layout_marginBottom="75dp"
        android:text="Buy now"
        android:backgroundTint="@color/hg"/>

</RelativeLayout>