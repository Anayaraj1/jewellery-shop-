<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="5dp"
    android:layout_height="match_parent"
    tools:context=".Braselet1Activity">

    <ImageView
        android:id="@+id/ivn1"
        android:layout_width="253dp"
        android:layout_height="163dp"
        android:src="@drawable/kangan1"/>
    <ImageView
        android:id="@+id/ivn3"
        android:layout_width="253dp"
        android:layout_height="163dp"
        android:layout_below="@id/ivn1"
        android:src="@drawable/kangan2"
        android:layout_marginTop="15dp"/>

    <ImageView
        android:id="@+id/ivn4"
        android:layout_width="253dp"
        android:layout_height="163dp"
        android:layout_below="@id/ivn3"
        android:src="@drawable/kangan3"
        android:layout_marginTop="15dp"/>
    <ImageView
        android:id="@+id/ivn2"
        android:layout_width="253dp"
        android:layout_height="163dp"
        android:layout_below="@id/ivn4"
        android:src="@drawable/kangan5"
        android:layout_marginTop="15dp"/>

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="96dp"
        android:text="Buy now"
        android:backgroundTint="@color/hg"
        android:layout_marginEnd="19dp"
       />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="245dp"
        android:layout_marginEnd="25dp"
        android:text="Buy now"
        android:backgroundTint="@color/hg"/>

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="19dp"
        android:layout_marginBottom="267dp"
        android:text="Buy now"
        android:backgroundTint="@color/hg"/>

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="19dp"
        android:layout_marginBottom="71dp"
        android:text="Buy now"
        android:backgroundTint="@color/hg"/>


</RelativeLayout>