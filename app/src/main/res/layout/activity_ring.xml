<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="5dp"
    android:layout_height="match_parent"
    tools:context=".RingActivity">

    <ImageView
        android:id="@+id/ivr1"
        android:layout_width="239dp"
        android:layout_height="140dp"
        android:src="@drawable/ring2"/>

    <ImageView
        android:id="@+id/ivr2"
        android:layout_width="239dp"
        android:layout_height="140dp"
        android:layout_below="@+id/ivr1"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/white"
        android:src="@drawable/ring6" />

    <ImageView
        android:id="@+id/ivr3"
        android:layout_width="239dp"
        android:layout_height="140dp"
        android:layout_below="@id/ivr2"
        android:layout_marginTop="10dp"
        android:src="@drawable/ring7" />

    <ImageView
        android:id="@+id/ivr4"
        android:layout_width="239dp"
        android:layout_height="140dp"
        android:layout_below="@id/ivr3"
        android:layout_marginTop="10dp"
        android:src="@drawable/ring5" />

    <ImageView
        android:id="@+id/ivr5"
        android:layout_width="249dp"
        android:layout_height="115dp"
        android:layout_below="@id/ivr4"
        android:backgroundTint="@color/white"
        android:layout_marginTop="16dp"
        android:src="@drawable/ring4" />


    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="208dp"
        android:layout_marginEnd="46dp"
        android:backgroundTint="@color/hg"
        android:text="Buy now" />

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="66dp"
        android:layout_marginEnd="40dp"
        android:text="Buy now"
        android:backgroundTint="@color/hg"/>

    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="331dp"
        android:backgroundTint="@color/hg"
        android:text="Buy now" />

    <Button
        android:id="@+id/button7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="51dp"
        android:layout_marginBottom="182dp"
        android:backgroundTint="@color/hg"
        android:text="Buy now" />

    <Button
        android:id="@+id/button8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="34dp"
        android:backgroundTint="@color/hg"
        android:layout_marginBottom="34dp"
        android:text="Buy now" />


</RelativeLayout>