<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".SilverActivity">

    <ImageView
        android:id="@+id/ivp1"
        android:layout_width="227dp"
        android:layout_height="142dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="-2dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:src="@drawable/payal1" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="321dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivp1"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:text="Payal"
        android:textSize="20dp"
        android:backgroundTint="@color/hg"
        android:layout_marginStart="30dp"
        android:layout_marginTop="-19dp" />


    <ImageView
        android:id="@+id/ivp2"
        android:layout_width="245dp"
        android:layout_height="142dp"
        android:layout_below="@id/btn1"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="223dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:src="@drawable/sr1" />

    <Button
        android:layout_width="318dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivp2"
        android:text="Ring"
        android:textSize="20dp"
        android:id="@+id/btn2"
        android:backgroundTint="@color/hg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp" />

    <ImageView
        android:id="@+id/ivp3"
        android:layout_width="227dp"
        android:layout_height="142dp"
        android:layout_below="@id/ivp2"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="487dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:src="@drawable/sn1" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="331dp"
        android:layout_height="51dp"
        android:layout_below="@id/ivp3"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-8dp"
        android:layout_marginEnd="30dp"
        android:backgroundTint="@color/hg"
        android:text="Necklase"
        android:textSize="15dp" />
</RelativeLayout>