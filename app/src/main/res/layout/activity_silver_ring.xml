<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="5dp"
    android:layout_height="match_parent"
    tools:context=".SilverRingActivity">

    <ImageView
        android:layout_width="207dp"
        android:layout_height="147dp"
        android:clipToOutline="true"
        android:id="@+id/ivsr1"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/sr1" />

    <ImageView
        android:id="@+id/ivsr2"
        android:layout_width="207dp"
        android:layout_height="147dp"
        android:layout_below="@id/ivsr1"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="7dp"
        android:layout_marginTop="182dp"
        android:clipToOutline="true"
        android:src="@drawable/sr2" />

    <ImageView
        android:id="@+id/ivsr3"
        android:layout_width="207dp"
        android:layout_height="147dp"
        android:layout_below="@id/ivsr2"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="11dp"
        android:layout_marginTop="360dp"
        android:clipToOutline="true"
        android:src="@drawable/sr3" />

    <ImageView
        android:id="@+id/ivsr4"
        android:layout_width="207dp"
        android:layout_height="147dp"
        android:layout_below="@id/ivsr3"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="545dp"
        android:clipToOutline="true"
        android:src="@drawable/sr4" />

    <Button
        android:id="@+id/button1"
        android:shadowRadius="350"
        android:shadowDx="20"
        android:shadowDy="20"
        android:backgroundTint="@color/rubi"
        android:outlineSpotShadowColor="@color/hg"
        android:paddingBottom="@dimen/cardview_compat_inset_shadow"
        android:shadowColor="@color/rubi"
        android:paddingLeft="@dimen/cardview_compat_inset_shadow"
        android:paddingRight="@dimen/cardview_compat_inset_shadow"
        android:paddingTop="@dimen/cardview_compat_inset_shadow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="57dp"
        android:layout_marginEnd="43dp"
        android:text="Button" />

    <Button
        android:id="@+id/button12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="242dp"
        android:layout_marginEnd="43dp"
        android:text="Button" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="43dp"
        android:backgroundTint="@color/g3"
        android:layout_marginBottom="276dp"
        android:text="Button" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:shadowRadius="@integer/material_motion_duration_long_1"
        android:shadowColor="@color/rubi"
        android:backgroundTint="@color/s"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="41dp"
        android:layout_marginBottom="89dp"
        android:text="Button" />


</RelativeLayout>